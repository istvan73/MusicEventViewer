<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/oldschoolSecondBackground"
    tools:context="com.example.dell_5548.eventmusicpestyah_hunyi.Fragments.UserWelcomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/welcomeUserText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:text="Welcome, User" />

    <Button
        android:id="@+id/fragment_user_log_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/welcomeUserText"
        android:layout_alignBottom="@+id/welcomeUserText"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="9dp"
        android:text="Log out" />

    <Button
        android:id="@+id/fragment_user_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/fragment_user_log_out"
        android:layout_alignBottom="@+id/fragment_user_log_out"
        android:layout_toStartOf="@+id/fragment_user_log_out"
        android:text="PROFILE" />

</RelativeLayout>
