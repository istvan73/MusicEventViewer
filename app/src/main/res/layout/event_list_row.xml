<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/oldschoolRecyclerViewBackground"
    android:orientation="vertical">


    <TextView
        android:id="@+id/event_card_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/event_card_image_view"
        android:layout_alignParentEnd="true"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/event_card_location"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/event_card_type"
        android:layout_below="@+id/event_card_type"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/event_card_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/event_card_time"
        android:layout_alignParentEnd="true"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/event_card_type"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/event_card_name"
        android:layout_below="@+id/event_card_name"
        android:layout_marginTop="14dp"
        android:text="TextView"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/event_card_image_view"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/event_image_content_descriptor"
        app:srcCompat="@drawable/common_full_open_on_phone" />

    <TextView
        android:id="@+id/event_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/event_card_image_view"
        android:text="TextView"
        android:textSize="24sp" />
</RelativeLayout>